#include <stdio.h>
#define EPS 0.0000000000000000000000000000001
#define ROW 6
#define COL 6



int main(void)
{
	int i, j, m, n, pivot, min, cnt, matrix[ROW][COL];
	int* temp1, temp2, temp;
	printf("행의 수를 입력하세요(최소 1, 최대 6): ");
	scanf_s("%d", m);
	printf("열의 수를 입력하세요(최소 1, 최대 6): ");
	scanf_s("%d", n);

	min = m < n ? m : n;


	printf("%d행 %d열 행렬의 성분을 입력하세요: ", m, n);
	for (i = 0; i < m; i++)
	{
		for (j = 0; j < n; j++)
		{
			scanf_s("%d", &matrix[i][j]);
		}
	}

	cnt = pivot = 0;
	for (i = 0; i < n; i++)
	{
		for (j = pivot; j < n; j++)
		{
			if (j == pivot)
			{
				if (matrix[j][i] < EPS)
				{
					temp1 = &matrix[j][pivot];
					cnt++;
				}
			}
			else
			{
				if (matrix[j][pivot] < EPS)
				{
					temp1 = &matrix[j][pivot];
					cnt++;
				}
			}
			

		}
		cnt = 0;
	}

	return 0;
}
